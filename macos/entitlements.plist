<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Allow JIT compilation (needed for some Python packages) -->
    <key>com.apple.security.cs.allow-jit</key>
    <true/>
    
    <!-- Allow unsigned executable memory (needed for numpy, opencv) -->
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <true/>
    
    <!-- Disable library validation (needed for bundled libraries) -->
    <key>com.apple.security.cs.disable-library-validation</key>
    <true/>
    
    <!-- Camera access for ZWO/ASCOM cameras -->
    <key>com.apple.security.device.camera</key>
    <true/>
    
    <!-- USB device access for ZWO cameras -->
    <key>com.apple.security.device.usb</key>
    <true/>
    
    <!-- Network client (for ASCOM Alpaca, Discord webhooks, weather API) -->
    <key>com.apple.security.network.client</key>
    <true/>
    
    <!-- Network server (for web output server, RTSP) -->
    <key>com.apple.security.network.server</key>
    <true/>
    
    <!-- File access for watch directory mode -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>
</dict>
</plist>
